{
  "include": ["./src/**/*"],
  "exclude": ["*/node_modules/**/*", "**/*.test.ts"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "declarationMap": true,
    "verbatimModuleSyntax": false
  }
}
